<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User History</title>
    <link href="/css/output.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('partials/navbar', { page: '/userHistory', session: session })
    %>
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 mt-6">
      <div class="hero bg-slate-200 p-6 rounded-lg">
        <div class="hero-content text-center">
          <div class="max-w-md mx-auto">
            <h1 class="text-5xl font-bold"><%= session.user.userName %></h1>
            <p class="text-xl mt-4">User History: <%= session.user.email %></p>
          </div>
        </div>
      </div>

      <div class="mt-8 flow-root">
        <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
          <div
            class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8"
          >
            <table class="min-w-full divide-y divide-gray-300">
              <thead>
                <tr>
                  <th
                    scope="col"
                    class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0"
                  >
                    Login Date/Time
                  </th>
                  <th
                    scope="col"
                    class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"
                  >
                    Client Information
                  </th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200">
                <% session.user.loginHistory.forEach(function(history) { %>
                <tr class="even:bg-gray-50">
                  <td
                    class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0"
                  >
                    <%= new Date(history.dateTime).toUTCString() %>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <%= history.userAgent %>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
