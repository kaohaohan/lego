<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Set Details</title>
    <link href="/css/output.css" rel="stylesheet" />
  </head>
  <body tabindex="-1">
    <!-- 包含导航栏部分视图 -->
    <%- include('partials/navbar', {page: ''}) %>

    <div class="container mx-auto mt-8">
      <div class="hero bg-base-200 rounded-lg p-6">
        <div class="hero-content text-center">
          <div>
            <h1 class="text-5xl font-bold mb-8">Set Details</h1>
            <div class="my-4">
              <h2 class="text-3xl"><%= set.name %></h2>
              <img
                src="<%= set.img_url %>"
                alt="<%= set.name %>"
                class="my-4 w-96 h-auto mx-auto rounded"
              />
              <p>Theme: <%= set.Theme.name %></p>
              <p>Year: <%= set.year %></p>
              <p>Number of parts: <%= set.num_parts %></p>
              <div id="quote" class="mt-8"></div>
              <div id="author"></div>
              <div class="mt-4">
                <a href="/lego/sets" class="btn btn-outline btn-info"
                  >Back to Collection</a
                >
              </div>
              <div class="mt-4">
                <a
                  href="/lego/editSet/<%= set.set_num %>"
                  class="btn btn-outline btn-info"
                  >Edit</a
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        fetch("https://quotable.io/random")
          .then((response) => response.json())
          .then((data) => {
            // Update the DOM with the quote and author

            document.getElementById("quote").textContent = data.content;
            document.getElementById("author").textContent = data.author;
          })
          .catch((error) => console.error("Error fetching the quote:", error));
      });
    </script>
  </body>
</html>
